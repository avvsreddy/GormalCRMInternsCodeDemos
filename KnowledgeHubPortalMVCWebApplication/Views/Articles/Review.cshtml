@model IEnumerable<KnowledgeHubPortalMVCWebApplication.Models.Entities.Article>

@{
    ViewData["Title"] = "Review";
}

<h1>Review Articles</h1>

<h3>@TempData["Message"]</h3>


<form action="Review" method="post">

    Select Catagory to Search
    <select asp-items="@ViewBag.Catagories" name="catid">
        <option>Select Catagory</option>
    </select>
    <input type="submit" name="btnSearch" value="Search" />
</form>


<form  method="post">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Select
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
               
                <th>
                    Catagory
                </th>




            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="articleids" value="@item.ArticleID" />
                    </td>
                   
                    <td>
                        <a href="@item.Url" target="_blank">@item.Title</a>
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Catagory.Name)
                    </td>

                </tr>
            }
        </tbody>
    </table>

    <input type="submit" asp-action="Approve" name="btnApprove" value="Approve" />
    <input type="submit" asp-action="Reject" name="btnReject" value="Reject" />

</form>